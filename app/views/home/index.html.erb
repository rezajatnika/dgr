<div class="row">
  <h1 class="page-header">Dodol Picnic</h1>
  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-3">
            <i class="fa fa-shopping-cart fa-5x" aria-hidden="true"></i>
          </div>
          <div class="col-sm-9 text-right">
            <div class="huge">10</div>
            <div>Sales Order</div>
          </div>
        </div>
      </div>
      <a href="<%= new_order_path %>">
        <div class="panel-footer">
          <span class="pull-left">New Sales Order</span>
          <span class="pull-right"><i class="fa fa-plus" aria-hidden="true"></i></span>
          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-sm-3">
            <i class="fa fa-user fa-5x" aria-hidden="true"></i>
          </div>
          <div class="col-sm-9 text-right">
            <div class="huge">-</div>
            <div>Logged in as <%= @user.name %></div>
          </div>
        </div>
      </div>
      <%= link_to user_session_path, method: :delete do %>
        <div class="panel-footer">
          <span class="pull-left">Log Out</span>
          <span class="pull-right"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
          <div class="clearfix"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
